<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fleet.tracking</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="6"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="WhatsApp" string="WhatsApp" data-key="brainpack_meta_whatsapp">
                    <h2>WhatsApp</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_brainpack_meta_whatsapp_discuss" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_brainpack_meta_whatsapp_discuss" string="Discuss"
                                       class=" o_light_label"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_brainpack_meta_whatsapp_crm" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_brainpack_meta_whatsapp_crm" string="CRM" class=" o_light_label"/>

                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_brainpack_meta_whatsapp_sale" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_brainpack_meta_whatsapp_sale" string="Sales" class=" o_light_label"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_brainpack_meta_whatsapp_purchase" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_brainpack_meta_whatsapp_purchase" string="Purchase"
                                       class=" o_light_label"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_brainpack_meta_whatsapp_invoice" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_brainpack_meta_whatsapp_invoice" string="Invoice"
                                       class=" o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
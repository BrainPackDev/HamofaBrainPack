<odoo>
    <data>
        <record model="ir.ui.view" id="custom_mail_server_form">
            <field name="name">mails server custom form</field>
            <field name="model">ir.mail_server</field>
            <field name="inherit_id" ref="base.ir_mail_server_form"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="company_id"></field>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="custom_mail_server_tree">
            <field name="name">mails server custom tree</field>
            <field name="model">ir.mail_server</field>
            <field name="inherit_id" ref="base.ir_mail_server_list"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="company_id"></field>
                </field>
            </field>
        </record>
    </data>
</odoo>